<div ng-app="UserReg" ng-controller="UserController">
    <br />
    <div style="float:right;">
        <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#myModal">Login & Register</button>
    </div>

    <br />

    <table cellpadding="12" class="table table-bordered table-hover">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Type</th>
            <th>UserName</th>            
            <th ng-show="{{BoolVal}}">Action</th>
        </tr>
        <tr ng-repeat="Emp in employees | orderBy:FilterName">
            <td>{{Emp.ID}}</td>
            <td>{{Emp.Name}}</td>
            <td>{{Emp.Type}}</td>
            <td>{{Emp.UserName}}</td>        
            <td style="white-space:nowrap;" ng-show="{{BoolVal}}">
                <input type="button" class="btn btn-warning" value="Update" ng-click="UpdateEmp(Emp)" />
                <input type="button" class="btn btn-danger" value="Delete" ng-click="DeleteEmp(Emp)" />
            </td>
        </tr>
    </table>

    
    </div>

<div id="myModal" class="modal fade" role="dialog" style="width:80%; margin-left:10%;overflow-y: auto; ">    
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Login</h4>
            </div>
            <div class="container">
                <div class="row">
                    <div class="col-sm-12" >
                        <h1 class="text-center login-title">Sign in Crminial Data Application</h1>
                        <div class="account-wall">                            
                            <img class="profile-img" src="~/images/photo.png"  alt="">
                            <form class="form-signin">
                                <input type="text" class="form-control" placeholder="Email" required autofocus>&nbsp;
                                <input type="password" class="form-control" placeholder="Password" required>
                                <button class="btn btn-lg btn-primary btn-block" type="submit">
                                    Sign in
                                </button>
                                <label class="checkbox pull-left">
                                    <input type="checkbox" value="remember-me">
                                    Remember me
                                </label>
                                <a href="#" class="pull-right need-help">Need help? </a><span class="clearfix"></span>
                            </form>
                        </div>
                        <a href="#" class="text-center new-account" data-toggle="modal" data-target="#RegiterModel" data-dismiss="modal">Sign Up</a>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>    
</div>

